<Window x:Class="SplErpDC.UrlPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter ERP Server URL" Height="160" Width="450" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Please enter ERP server URL (https://erp.webspl.com/dashboard):" Margin="0,0,0,5"/>
        <TextBox x:Name="urlTextBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
